{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"src/SearchBugs.Api",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"src/SearchBugs.Api"
			],
			"problemMatcher": "$msCompile",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "run-api",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/SearchBugs.Api"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "run-api-debug",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/SearchBugs.Api"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}